@using ASPMVCTrial.Models;
@model Deal

<h1>Are you sure you want to delete this club?</h1>

<form method="post" asp-action="Delete" asp-controller="Deal" asp-route-id="@Model.Id">
    <div>
        Amount: <input asp asp-for="Amount" placeholder="Amount" />
    </div>
    <div>
        Partner: <input asp-for="Partner" placeholder="Partner" />
    </div>
    <div>
        Profit: <input asp-for="Profit" placeholder="Profit" />
    </div>
    <div>
        ComissionCash: <input asp-for="ComissionCash" placeholder="ComissionCash" />
    </div>
    <div>
        ComissionPercent: <input asp-for="ComissionPercent" placeholder="ComissionPercent" />
    </div>
    <div>
        <input type="submit" value="Confirm" />
    </div>
</form>

@{
}
